# Social Media Manager - Environment Variables Example
# Copy this to .env.production or .env.local and update values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://avisul_user:your_secure_password@postgres:5432/avisul"
DB_USER=avisul_user
DB_PASSWORD=your_secure_password
DB_NAME=avisul

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Social Media Manager"
NEXT_PUBLIC_DOMAIN="localhost"

# ============================================
# SUPABASE (OPTIONAL)
# ============================================
# Uncomment if using Supabase for storage
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ============================================
# FILE UPLOAD
# ============================================
# Maximum upload size in bytes (default: 52428800 = 50MB)
MAX_UPLOAD_SIZE=52428800

# ============================================
# SECURITY
# ============================================
# API Rate limiting (requests per minute)
RATE_LIMIT=60

# Session timeout in milliseconds (default: 86400000 = 24 hours)
SESSION_TIMEOUT=86400000